(defwidget system_indicators []
  (box
    :class "bar"
    :orientation "horizontal"
    :spacing 30
    :space-evenly false
    :hexpand true
    (metric
      :label "󰍛"
      :value {EWW_RAM.used_mem_perc}
    )
    (metric
      :label "󰻠"
      :value {EWW_CPU.avg}
    )
  )
)

(defwidget metric [label value]
  (box
    :orientation "horizontal"
    :space-evenly false
    :spacing 16
    :hexpand true
    :halign "center"
    (box
      :class "metric-label"
      
      label
    )
    (circular-progress
      :value {round(value, 0)}
      :width 30
      :height 30
      :start-at 30
      :thickness 2
      :clockwise true
      :halign "fill"
      :class "circular-progress"
      
      (label
        :class "circular-progress-label"
        :text "${round(value, 0)}"
      )
    )
  )
)