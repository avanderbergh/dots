(defpoll date :interval "1s"
"date +'%k:%M - %A %d %b %Y'")

; Window definitions

(defwindow calendar
  :monitor 0
  :geometry (
    geometry
    :x "10px"
    :y "4%"
    :anchor "top left"
  )
  :stacking "fg"
  :reserve (struts :distance "40px" :side "top")
  :wm-ignore true
  (calendar
    :onclick "xdg-open https://calendar.google.com/calendar/u/0/r/day/{2}/{1}/{0} ; eww close calendar"
  )
)

(defwindow top_left
  :monitor 0
  :geometry (
    geometry
    :x "5px"
    :y "5px"
    :anchor "top left"
  )
  :stacking "fg"
  :reserve (struts :distance "60px" :side "top")
  :windowtype "dock"
  :wm-ignore false
  (time)
)

(defwindow top_center
  :monitor 0
  :geometry (
    geometry
    :y "5px"
    :anchor "top center"
  )
  :stacking "fg"
  :reserve (struts :distance "60px" :side "top")
  :windowtype "dock"
  :wm-ignore false
  (desktops)
)

(defwindow top_right
  :monitor 0
  :geometry (
    geometry
    :y "5px"
    :x "-5px"
    :anchor "top right"
  )
  :stacking "fg"
  :reserve (struts :distance "60px" :side "top")
  :windowtype "dock"
  :wm-ignore false
  (system_indicators)
)

; Widget definitions

(defwidget time []
  (box
    :class "bar"
    (button
      :onclick "eww open calendar"
      
      date
    )
  )
)

