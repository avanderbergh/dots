{pkgs, ...}: {
  programs.autorandr = {
    enable = true;
    profiles = {
      home = {
        fingerprint = {
          DP-1-1 = "";
          eDP-1-1 = "";
        };
        config = {
          DP-1-1 = {
            dpi = 109;
            enable = true;
            mode = "5120x1440";
            position = "0x0";
            primary = true;
          };
          eDP-1-1 = {
            dpi = 109;
            enable = true;
            mode = "1920x1200";
            position = "5120x0";
          };
        };
        hooks.postswitch = ''
          for desktop in {1..5}; do
            bspc desktop "$desktop" -m DP-1-1
          done
          for desktop in {6..10}; do
            bspc desktop "$desktop" -m eDP-1-1
          done
          bspc desktop -f last
        '';
      };
      mobile = {
        fingerprint = {
          eDP-1-1 = "";
        };
        config = {
          eDP-1-1 = {
            dpi = 192;
            enable = true;
            mode = "3840x2400";
            position = "0x0";
            primary = true;
          };
          DP-1-1.enable = false;
        };
        hooks.postswitch = ''
          for desktop in {1..10}; do
            bspc desktop "$desktop" -m eDP-1-1
          done
          bspc desktop -f last
        '';
      };
      portable_monitor = {
        fingerprint = {
          DP-1-3 = "";
          eDP-1-1 = "";
        };
        config = {
          eDP-1-1 = {
            dpi = 192;
            primary = true;
            enable = true;
            mode = "3840x2400";
            position = "0x0";
          };
          DP-1-3 = {
            dpi = 192;
            enable = true;
            mode = "1920x1080";
            position = "3840x0";
            transform = [
              [2.000000 0.000000 0.000000]
              [0.000000 2.000000 0.000000]
              [0.000000 0.000000 1.000000]
            ];
          };
        };
        hooks.postswitch = ''
          for desktop in {1..5}; do
            bspc desktop "$desktop" -m eDP-1-1
          done
          for desktop in {6..10}; do
            bspc desktop "$desktop" -m DP-1-3
          done
          bspc desktop -f last
        '';
      };
    };
  };

  services.autorandr.enable = true;

  home.packages = with pkgs; [arandr];
}
